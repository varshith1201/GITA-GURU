modules = ["python-3.12"]
run = "streamlit run undefined"

[nix]
channel = "stable-25_05"
packages = ["glibcLocales"]

[deployment]
run = ["sh", "-c", "streamlit run undefined"]

[workflows]
runButton = "User Portal"

[[workflows.workflow]]
name = "User Portal"
author = 45568892
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run streamlit_app/user_portal.py --server.address 0.0.0.0 --server.port 5000"

[[workflows.workflow]]
name = "Admin Dashboard"
author = 45568892
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run streamlit_app/admin_dashboard.py --server.address 0.0.0.0 --server.port 8502"

[[ports]]
localPort = 5000
externalPort = 80
